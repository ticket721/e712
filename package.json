{
    "name": "@ticket721/e712",
    "version": "0.4.1",
    "description": "Pure Typescript/Javascript implementation of the Ethereum Improvement Proposal 712",
    "keywords": [
        "ethereum",
        "eip712",
        "signature",
        "eccrypto"
    ],
    "author": "Iulian Rotaru <iulian@rotaru.fr> (mortimr)",
    "homepage": "https://github.com/ticket721/e712/README.md",
    "license": "MIT",
    "main": "lib/index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ticket721/e712.git"
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "all": true,
        "reporter": [
            "text",
            "lcov"
        ],
        "include": [
            "sources/**.ts"
        ],
        "exclude": [
            "sources/index.ts",
            "sources/**.test.ts"
        ]
    },
    "scripts": {
        "build": "rm -rf lib && tsc",
        "test": "yarn test:lint && yarn test:editorconfig && yarn test:mocha",
        "test:mocha": "nyc ts-mocha ./sources/**.test.ts",
        "test:lint": "tslint --project .",
        "editorconfig-cli": "editorconfig-cli",
        "test:editorconfig": "yarn editorconfig-cli",
        "coverage:upload": "cat ./coverage/lcov.info | coveralls",
        "doc": "typedoc --theme markdown --excludePrivate --readme ./README.md",
        "publish": "yarn build && yarn publish",
        "@lerna/postinstall": "yarn build",
        "@lerna/postclean": "rm -rf lib && rm -rf node_modules"
    },
    "editorconfig-cli": [
        "./package.json",
        "./tsconfig.json",
        "./tslint.json",
        "./sources/**/*.ts"
    ],
    "bugs": {
        "url": "https://github.com/ticket721/e712/issues"
    },
    "dependencies": {
        "bn.js": "5.1.1",
        "ethers": "4.0.41"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.2.0",
        "@htmlacademy/editorconfig-cli": "^1.0.0",
        "@istanbuljs/nyc-config-typescript": "^1.0.0",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.12.22",
        "chai": "^4.2.0",
        "conventional-changelog-cli": "^2.0.12",
        "coveralls": "^3.0.6",
        "eth-sig-util": "^2.4.0",
        "husky": "4.3.0",
        "linted": "^1.0.5",
        "mocha": "^6.2.0",
        "nyc": "^15.0.0",
        "ts-mocha": "^6.0.0",
        "tslint": "^5.19.0",
        "typedoc": "^0.15.0",
        "typedoc-plugin-markdown": "^3.8.0",
        "typescript": "^3.5.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "editorconfig-cli",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
